
@{
    ViewBag.Title = "create";
    Layout = "~/Views/Shared/_BranchManagerLayout.cshtml";
}

<style>
    body {
        background-color: #eee;
    }

    *[role="form"] {
        max-width: 530px;
        padding: 15px;
        margin: 0 auto;
        background-color: #fff;
        border-radius: 0.3em;
    }

        *[role="form"] h2 {
            margin-left: 5em;
            margin-bottom: 1em;
        }
</style>

<div class="col-lg-12 well">
    Create a New Branch
</div>
<div class="col-lg-12 well">
    <div class="row">
        <form action="/branch/store" method="post">
            <div class="col-sm-12">

                <div class="row">

                    <div class="col-sm-4 form-group">
                        <label>Branch Id</label>
                        <input type="text" placeholder="Enter Branch Id Here.." class="form-control" name="branch_id">
                    </div>

                    <div class="col-sm-4 form-group">
                        <label>Branch Name</label>
                        <input type="text" placeholder="Enter Branch Name Here.." class="form-control" name="branch_name">
                    </div>

                    <div class="col-sm-4 form-group">
                        <label>Branch Manager ID</label>
                        <input type="text" placeholder="Enter Branch Manager ID Here.." class="form-control" name="branch_manager_id">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 form-group">
                        <label>Street</label>
                        <input type="text" placeholder="Enter Street Name Here.." class="form-control" name="street">
                    </div>
                    <div class="col-sm-4 form-group">
                        <label>City</label>
                        <input type="text" placeholder="Enter City Name Here.." class="form-control" name="city">
                    </div>
                    <div class="col-sm-4 form-group">
                        <label>State</label>
                        <input type="text" placeholder="Enter State Name Here.." class="form-control" name="state">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 form-group">
                        <label>Pincode</label>
                        <input type="text" placeholder="Enter Zip Code Here.." class="form-control" name="pincode">
                    </div>
                </div>
                <div class="row">

                    <div class="col-sm-6 form-group">
                        <label for="exampleTextarea">Address</label>
                        <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
                    </div>
                </div>

            </div>



            <div class="col-sm-8 form-group">
                <label>Phone Number</label>
                <div class="row">
                    <div class="col-lg-6">
                        <input type="text" placeholder="Enter Phone Number Here.." class="form-control" name="phone">
                    </div>
                    <div class="col-lg-6">
                        <input type="text" placeholder="Enter Alternate Phone Number Here.." class="form-control" name="alternate_number">
                    </div>

                </div>
                <button type="submit" class="btn btn-lg btn-info">Save</button>
            </div>
        </form>
    </div>
</div>
